<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="studentmanagementsystemm.StudentAttendanceController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: #ffffff; -fx-border-color: #dcdde1; -fx-border-radius: 10; -fx-background-radius: 10;">

    <VBox spacing="15"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0">

        <Label text="ðŸ“… My Attendance"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <TableView fx:id="attendanceTable"
                   prefHeight="350"
                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ccc;">
            <columns>
                <TableColumn fx:id="colCourseCode"
                             text="Course Code"
                             prefWidth="130" />
                <TableColumn fx:id="colCourseName"
                             text="Course Name"
                             prefWidth="170" />
                <TableColumn fx:id="colDate"
                             text="Date"
                             prefWidth="130" />
                <TableColumn fx:id="colStatus"
                             text="Status"
                             prefWidth="120" />
            </columns>
        </TableView>

    </VBox>
</AnchorPane>


