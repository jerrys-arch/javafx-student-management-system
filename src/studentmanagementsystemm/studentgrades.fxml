            style="-fx-background-color: #ffffff; -fx-border-color: #dcdde1; -fx-border-radius: 10; -fx-background-radius: 10;">

    <VBox spacing="15"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0">

