<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="497.0" prefWidth="478.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studentmanagementsystemm.FXMLDocumentController">

   <!-- Register Form -->
<AnchorPane fx:id="register_form" layoutX="10.0" layoutY="10.0" maxHeight="494.0" maxWidth="479.0" prefHeight="494.0" prefWidth="479.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.0, 0, 0);" visible="false">
   <children>
      <Label fx:id="label_regtitle" layoutX="100.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Student Management System" />
      <Label fx:id="label_regusername" layoutX="32.0" layoutY="115.0" style="-fx-font-size: 14px;" text="Username:" />
      <TextField fx:id="register_username" layoutX="192.0" layoutY="112.0" maxWidth="250" promptText="Enter Username" />
      <Label fx:id="label_regpassword" layoutX="34.0" layoutY="291.0" style="-fx-font-size: 14px;" text="Password:" />
      
      <!-- PasswordField for registration -->
      <PasswordField fx:id="register_passwordField" layoutX="192.0" layoutY="288.0" maxWidth="250" promptText="Enter Password" />
      
      <!-- Show Password CheckBox for registration -->
      <CheckBox fx:id="register_CheckBox1" layoutX="48.0" layoutY="326.0" onAction="#toggleRegisterPasswordVisibility" text="Show Password" />
      
      <!-- TextField for showing the password -->
      <TextField fx:id="register_showpassword" layoutX="192.0" layoutY="288.0" visible="false" promptText="Enter Password" />
      
      <Button fx:id="register_btn" layoutX="247.0" layoutY="402.0" maxWidth="250" onAction="#handleRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Register" />
      <Label fx:id="label_regrole" layoutX="33.0" layoutY="175.0" prefHeight="17.0" prefWidth="39.0" text="  Role:" />
      <Label fx:id="label_email" layoutX="36.0" layoutY="229.0" text=" Email:" />
      <TextField fx:id="register_email" layoutX="192.0" layoutY="225.0" />
      <ComboBox fx:id="register_role" layoutX="192.0" layoutY="171.0" prefWidth="150.0" />
      
      <Label fx:id="label_register" layoutX="142.0" layoutY="49.0" prefHeight="30.0" prefWidth="183.0" text="Register Account">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button fx:id="register_exitbtn" layoutX="75.0" layoutY="402.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="65.0" text="Exit" onAction="#handleExit"/>
      <Label fx:id="label_regquestion" layoutX="59.0" layoutY="446.0" text="  Already an Account?" />
      <Hyperlink fx:id="register_loginhere" layoutX="192.0" layoutY="443.0" text="Login Here" onAction="#switchForm" />
   </children>
</AnchorPane>


   <!-- Login Form -->
   <AnchorPane fx:id="login_form" maxHeight="495.0" maxWidth="479.0" prefHeight="495.0" prefWidth="479.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.0, 0, 0);">
      <children>
         <Label fx:id="login_title" layoutX="100.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Student Management System" />
         <TextField fx:id="login_username" layoutX="210.0" layoutY="127.0" maxWidth="250" promptText="Enter Username" />
         <Label fx:id="label_logpassword" layoutX="53.0" layoutY="202.0" style="-fx-font-size: 14px;" text="Password:" />
         <PasswordField fx:id="login_passwordField" layoutX="210.0" layoutY="199.0" maxWidth="250" promptText="Enter Password" />
         <CheckBox fx:id="login_CheckBox" layoutX="70.0" layoutY="239.0" onAction="#togglePasswordVisibility" text="Show Password" />
         <Button fx:id="login_btn" layoutX="239.0" layoutY="325.0" maxWidth="250" onAction="#handleLogin" prefHeight="25.0" prefWidth="59.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Login" />
        
         <Label fx:id="label_login" layoutX="157.0" layoutY="62.0" prefHeight="30.0" prefWidth="117.0" text="     Login Account" />
         <Button fx:id="exit_btn" layoutX="116.0" layoutY="325.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="59.0" text="Exit" onAction="#handleExit"/>
         <Label fx:id="label__logquestion" layoutX="34.0" layoutY="410.0" text="Have not Registered yet?" />
         <!-- Added TextField for password visibility toggle -->
         <TextField fx:id="login_showpassword" layoutX="210.0" layoutY="199.0" visible="false" promptText="Enter Password" />
         <Hyperlink fx:id="login_registerhere" layoutX="181.0" layoutY="407.0" text="Register here" onAction="#switchForm" />
         <Label fx:id="label_logusername" layoutX="53.0" layoutY="131.0" prefHeight="20.0" prefWidth="56.0" text="Username:" />
      </children>
   </AnchorPane>

</StackPane>
