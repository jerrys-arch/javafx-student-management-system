<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="studentmanagementsystemm.TeachergradesController"
      spacing="20" maxWidth="700" alignment="TOP_CENTER"
      style="-fx-background-color: white;
             -fx-border-color: #dcdde1;
             -fx-border-radius: 10;
             -fx-background-radius: 10;
             -fx-padding: 20;">

    <Label text="ðŸ“ Assign Grades"
           style="-fx-font-size: 18px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #2c3e50;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Select Course:"
               style="-fx-font-size: 14px;" />
        <ComboBox fx:id="courseComboBox"
                  prefWidth="300"
                  style="-fx-background-radius: 6;" />
    </HBox>

    <!-- Reduced height for TableView to keep the layout consistent with other pages -->
    <TableView fx:id="gradeTable"
               prefHeight="200" 
               style="-fx-border-radius: 6;
                      -fx-background-radius: 6;
                      -fx-border-color: #ccc;">
        <columns>
            <TableColumn fx:id="studentIdCol" text="Student ID" prefWidth="100"/>
            <TableColumn fx:id="studentNameCol" text="Student Name" prefWidth="250"/>
            <TableColumn fx:id="gradeCol" text="Grade" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Raised the buttons closer to the TableView -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="âœ… Save Grades"
                onAction="#handleSaveGrades"
                style="-fx-background-color: #27ae60;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 8px;
                       -fx-padding: 8 16;" />

        <Button text="âŒ Delete Grade"
                onAction="#handleDeleteGrade"
                style="-fx-background-color: #e74c3c;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 8px;
                       -fx-padding: 8 16;" />
    </HBox>

</VBox>
